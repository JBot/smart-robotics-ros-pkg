<?xml version="1.0"?>

<launch>
  <node pkg="hector_mapping" type="hector_mapping" name="carry_hector_mapping" output="screen">
    
    <remap from="/scan" to="/CARRY/laser_nav" />
    <remap from="/map" to="/CARRY/SLAM_map" />

    <!-- Frame names -->
    <param name="map_frame" value="carry_slam_map" />
    <param name="base_frame" value="carry_base_link" />
    <param name="odom_frame" value="carry_base_link" />
    
    <!-- Tf use -->
    <param name="use_tf_scan_transformation" value="true"/>
    <param name="use_tf_pose_start_estimate" value="false"/>
    <param name="pub_map_odom_transform" value="true"/>
    
    <!-- Map size / start point -->
    <param name="map_resolution" value="0.020"/>
    <param name="map_size" value="1024"/>
    <param name="map_start_x" value="0.5"/>
    <param name="map_start_y" value="0.5" />
    <param name="map_multi_res_levels" value="3" />
    
    <!-- Map update parameters -->
    <param name="update_factor_free" value="0.4"/>
    <param name="update_factor_occupied" value="0.8" />    
    <param name="map_update_distance_thresh" value="0.05"/> <!-- 0.05 -->
    <param name="map_update_angle_thresh" value="0.01" /> <!-- 0.01 -->
    
    <!-- Advertising config --> 
    <param name="advertise_map_service" value="false"/>
    
    <!-- Laser parameters -->
    <param name="laser_min_dist" value="0.1"/>
    <param name="laser_max_dist" value="4.5"/>

    <param name="map_pub_period" value="5"/>


<!--
    <param name="pub_map_scanmatch_transform" value="false"/>
    <param name="scan_subscriber_queue_size" value="2"/>
-->
    <!-- Debug parameters -->
    <!--
      <param name="output_timing" value="true"/>
      <param name="pub_drawings" value="true"/>
      <param name="pub_debug_output" value="true"/>
    -->
  </node>
